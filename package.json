{
  "name": "taxsnap",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "postinstall": "prisma generate",
    "start": "node .next/standalone/server.js",
    "lint": "next lint",
    "db:start": "docker-compose up -d postgres adminer && npx prisma generate && npx prisma db push && tsx lib/utils/seed.ts",
    "db:seed": "npx prisma db push && tsx lib/utils/seed.ts",
    "db:studio": "npx prisma studio",
    "docker:infra": "docker-compose -f docker-compose.yml up -d postgres adminer",
    "docker:dev": "docker-compose up --build",
    "docker:dev:detach": "docker-compose up -d --build",
    "docker:prod": "docker-compose -f docker-compose.prod.yml up --build",
    "docker:prod:detach": "docker-compose -f docker-compose.prod.yml up -d --build",
    "docker:stop": "docker-compose down",
    "docker:stop:prod": "docker-compose -f docker-compose.prod.yml down",
    "docker:clean": "docker-compose down -v --remove-orphans && docker system prune -f",
    "docker:logs": "docker-compose logs -f app",
    "docker:logs:prod": "docker-compose -f docker-compose.prod.yml logs -f app"
  },
  "dependencies": {
    "@next/env": "^15.3.3",
    "@prisma/client": "^6.10.1",
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-select": "^2.2.5",
    "@radix-ui/react-slot": "^1.2.3",
    "@types/bcryptjs": "^2.4.6",
    "@types/uuid": "^10.0.0",
    "bcryptjs": "^3.0.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "jose": "^6.0.11",
    "lucide-react": "^0.514.0",
    "next": "15.2.4",
    "next-themes": "^0.4.6",
    "nodemailer": "^7.0.3",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "sonner": "^2.0.5",
    "tailwind-merge": "^3.3.1",
    "uuid": "^11.1.0",
    "zod": "^3.25.63"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@types/node": "^20",
    "@types/nodemailer": "^6.4.17",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "autoprefixer": "^10.4.21",
    "eslint": "^9",
    "eslint-config-next": "15.2.4",
    "postcss": "^8.5.5",
    "prisma": "^6.10.1",
    "tailwindcss": "^3.4.17",
    "tailwindcss-animate": "^1.0.7",
    "tsx": "^4.20.2",
    "tw-animate-css": "^1.3.4",
    "typescript": "^5"
  }
}
